= provide(:title, "Authentication")
-if @authentications
 -unless @authentications.empty?
  %p
   %strong You can sign in to this account using:
  .authentications
   -for authentication in @authentications
    .authentication
     = image_tag "#{authentication.provider}_32.png", :size => "32x32"
     .provider=authentication.provider.titleize
     .uid=authentication.uid
     = link_to "X", authentication, :confirm => 'Are you sure you want to remove this authentication option?', :method => 'delete', :class => 'remove'
   .clear
  %br
  %br
  %p
   %strong.add_service Add another service to sign in with: 
-else
 %p
  %strong Sign in through one ot these services:

%a{href: "/auth/twitter" , class: "auth_provider"}
 = image_tag "twitter_64.png", :size => "64x64", :alt => "Twitter" 
 Twitter
%a{href: "/auth/facebook" , class: "auth_provider"}
 = image_tag "facebook_64.png", :size => "64x64", :alt => "Facebook" 
 Facebook
%a{href: "/auth/google_app" , class: "auth_provider"}
 = image_tag "google_64.png", :size => "64x64", :alt => "Google" 
 Google
%a{href: "/auth/open_id" , class: "auth_provider"}
 = image_tag "openid_64.png", :size => "64x64", :alt => "OpenID" 
 OpenID
.statment_signin_signup
 %span Don't use these services?
 = link_to "Sign up", new_user_path
 %span Or
 = link_to "Sign in", new_session_path
 %span with password
 .clear
-#= debug(session) if Rails.env.development?


